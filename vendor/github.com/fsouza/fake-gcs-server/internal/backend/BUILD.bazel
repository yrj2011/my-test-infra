load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "fs.go",
        "memory.go",
        "object.go",
        "storage.go",
    ],
    importmap = "k8s.io/test-infra/vendor/github.com/fsouza/fake-gcs-server/internal/backend",
