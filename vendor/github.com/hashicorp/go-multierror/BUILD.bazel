load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "append.go",
        "flatten.go",
        "format.go",
        "multierror.go",
        "prefix.go",
    ],
    importmap = "k8s.io/test-infra/vendor/github.com/hashicorp/go-multierror",
    importpath = "github.com/hashicorp/go-multierror",
    visibility = ["//visibility:public"],
    deps = ["//vendor/github.com/hashicorp/errwrap:go_default_library"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
